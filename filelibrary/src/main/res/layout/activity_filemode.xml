<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="view"
            type="com.jqk.filelibrary.FileModeActivity"></variable>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/dir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{view::dir}"
            android:text="文件夹方式" />

        <Button
            android:id="@+id/dirFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{view::dirFragment}"
            android:text="文件夹方式Fragment"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{view::file}"
            android:text="文件方式" />
    </LinearLayout>
</layout>