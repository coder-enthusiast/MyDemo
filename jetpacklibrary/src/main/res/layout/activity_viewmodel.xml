<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:checked="@={viewModel.check}"
            android:layout_height="wrap_content"></CheckBox>

        <CheckBox
            android:id="@+id/checkbox02"
            android:layout_width="wrap_content"
            android:checked="@={viewModel.check2}"
            android:layout_height="wrap_content"></CheckBox>

    </LinearLayout>

    <data>

        <import type="androidx.lifecycle.LiveData"></import>
        
        <variable
            name="view"
            type="com.jqk.jetpacklibrary.viewmodel.ViewModelActivity" />

        <variable
            name="viewModel"
            type="com.jqk.jetpacklibrary.viewmodel.MyViewModel" />
    </data>
</layout>